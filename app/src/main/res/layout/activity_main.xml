<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:text="Add A Team"
            android:minWidth="100dp"
            android:minHeight="100dp"
            android:id="@+id/createTeam"
            android:textSize="25dp" />

    </LinearLayout>

    <ImageButton
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:text="Other Activity"
        android:id="@+id/to_new_activity"
        android:src="@drawable/orange_fish"
        android:maxWidth="10dp"
        android:maxHeight="10dp"
        android:longClickable="false"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/linearLayout3"
        android:layout_toStartOf="@+id/linearLayout3"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/spinnerLayout">

            <Button
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="Clear Stats"
                android:id="@+id/clearStat"
                android:minHeight="100dp"
                android:minWidth="500dp"
                android:textSize="20dp" />


            <Spinner
                android:layout_width="287dp"
                android:layout_height="wrap_content"
                android:id="@+id/teamSpinner"
                android:spinnerMode="dropdown"
                android:longClickable="true"
                android:textSize="50sp"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout5"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/spinnerLayout">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:minWidth="100dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="#ff08dfff"
                android:text="Name" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:minWidth="100dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="#ff08dfff"
                android:text="Wins" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:minWidth="100dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:background="#ff08dfff"
                android:text="Loses"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:id="@+id/linearLayout2"
            android:layout_alignParentTop="true">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:minWidth="100dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/teamName"
                android:background="#ff00ffa6"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:minWidth="100dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/teamWins"
                android:background="#ff00ffa6"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:minWidth="100dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/teamLoses"
                android:background="#ff00ffa6"/>

        </LinearLayout>



    </LinearLayout>

    <Spinner
        android:layout_width="287dp"
        android:layout_height="wrap_content"
        android:id="@+id/imageTeamSelector"
        android:spinnerMode="dropdown"
        android:longClickable="true"
        android:layout_alignTop="@+id/to_new_activity"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

</RelativeLayout>
